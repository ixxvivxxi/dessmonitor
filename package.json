{
  "name": "dessmonitor",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": ["app", "server"],
  "scripts": {
    "prepare": "husky",
    "dev": "npm run dev --workspace=app",
    "dev:app": "npm run dev --workspace=app",
    "dev:server": "npm run start:dev --workspace=server",
    "dev:all": "run-p dev:app dev:server",
    "build": "npm run build --workspace=app",
    "build:app": "npm run build --workspace=app",
    "build:server": "npm run build --workspace=server",
    "docker:build": "docker compose build",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write ."
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "npm-run-all": "^4.1.5"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,jsonc,css}": "biome check --write --no-errors-on-unmatched"
  }
}
